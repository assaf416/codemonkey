  <div class="flex space-x-4 mt-4 md:mt-0">
    <%= link_to "/developers/#{@developer.id}/toggle_favorites", class: "shrink-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
      <%= inline_svg_tag "icons/solid/heart.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
      <% if @user.favorite_developer?(@developer.id)%>
        <%= t(".remove_favorites") %>
        <% else %>
        <%= t(".add_favorites") %>
        <% end  %>
    <% end %>
  </div>

